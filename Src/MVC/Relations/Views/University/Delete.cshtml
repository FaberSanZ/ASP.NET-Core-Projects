@model Relations.Data.Entities.University
@{
    ViewData["Title"] = "Delete";
}

<div class="card border">
    <div class="card-header text-center">
        <h3>
            <strong>@ViewData["Title"] @Html.DisplayFor(model => model.Title)</strong>
        </h3>
    </div>
</div>

<br />

<div>

    <div class="row">
        <div class="col-md-4">
            <h5>-Location: @Html.DisplayFor(model => model.Location)</h5>
            <h5>-Code: @Html.DisplayFor(model => model.Code)</h5>
            <h5>-Curses: @Html.DisplayFor(model => model.Groups.Count)</h5>
        </div>
    </div>
</div>

<hr />

<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
    </form>
</div>

<br />

<br />

<table class="table table-striped table-bordered row-border" style="width:100%" id="MyTable">
    <thead>
        <tr>
            <th>
                Course
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Groups)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    <a asp-action="DetailsCourse" asp-route-id="@item.Id" class="btn btn-outline-info">Info</a>
                </td>
            </tr>
        }
    </tbody>
</table>


