@model Relations.Data.Entities.University

@{ ViewData["Title"] = "Details"; }


<div class="card border">
    <div class="card-header text-center">
        <h3>
            <strong>@Html.DisplayFor(model => model.Title)</strong>
        </h3>
    </div>
</div>

<br /> 

<div>

    <div class="row">
        <div class="col-md-4">
            <h5>-Location: @Html.DisplayFor(model => model.Location)</h5>
            <h5>-Code: @Html.DisplayFor(model => model.Code)</h5>
            <h5>-Curses: @Html.DisplayFor(model => model.Groups.Count)</h5>
        </div>
    </div>
</div>

<hr />

<div class="">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Edit</a>
    <a asp-action="AddCourse" asp-route-id="@Model.Id" class="btn btn-outline-primary">Add Course</a>
    <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
</div>

<br />

<br />

<table class="table table-striped table-bordered row-border" style="width:100%" id="MyTable">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Title)*@
                Course
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Groups)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    <a asp-action="EditCourse" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                    <a asp-action="DetailsCourse" asp-route-id="@item.Id" class="btn btn-outline-info">Info</a>
                    <a asp-action="DeleteCourse" data-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


