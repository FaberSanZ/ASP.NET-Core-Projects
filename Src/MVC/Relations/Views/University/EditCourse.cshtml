@model Relations.Controllers.CourseViewModel

@{ ViewData["Title"] = "Edit"; }

<h2>Edit</h2>

<h4>Course to University: @Model.University.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCourse" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UniversityId" />
            <input type="hidden" asp-for="Id" />

            <partial name="_Course" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.UniversityId" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
